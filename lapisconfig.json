{
	"css": {
		"from": "../../",
		"watch": [
			"src/scss/**/*.css",
			"src/scss/**/*.scss"
		],
		"src": "src/scss/app.scss",
		"dest": "./build/css",
		"filename": "app.css"
	},
	"js": {
		"from": "../../",
		"watch": [
			"src/js/**/*.js"
		],
		"src": "src/js/app.js",
		"dest": "./build/js",
		"filename": "app.js"
	}
}
